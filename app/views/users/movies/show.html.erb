<div class='centered_text'>
  <h2><%= @movie.title %></h2>

  <%= button_to 'Discover Movies', discover_user_path(@user), method: :get %>

<%= button_to "Create Viewing Party For #{@movie.title}", new_user_movie_viewing_party_path(@user, params[:id]), method: :get %><br>

  <%= button_to "Create Viewing Party For #{@movie.title}", discover_user_path(@user), method: :get %>
</div>

<table id='specs' class='centered_table'>
  <tr>
    <td>Vote: <%= @movie.vote_average %></td>
    <td>Runtime: <%= @movie.runtime/60 %>hr <%= @movie.runtime % 60 %>min</td>
    <td>Genre: <%= @movie.genres.map { |g| g[:name] }.join(', ') %></td>
  </tr>
</table>

<div id="topBlackBar"/>

<section id='summary' class='centered_block'>
  <h3>Summary</h3><br>
  <%= @movie.summary %>
</section>

<section id='cast' class='centered_block'>
  <h3>Cast</h3>
  <table>
    <% @movie.cast.each do |cast| %>
      <tr>
        <td><%= cast.name %> as <%= cast.character %></td>
      </tr>
    <% end %>
  </table>
</section>

<section id='reviews' class='centered_block'>
  <h3><%= @movie.reviews.count %> Reviews</h3>
  <% @movie.reviews.each do |review| %>
    <p>Author: <%= review.author %></p>
    <p><%= review.content %></p>
  <% end %>
</section>