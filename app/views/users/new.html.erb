<div class='centered_text'>
<h3>Create a new user:</h1>
  <%= form_with model: @user, url: users_path, method: :post, local: true do |f| %>
    <p><%= f.label :name %>
    <%= f.text_field :name %></p>

    <p><%= f.label :email %>
    <%= f.text_field :email %></p>

    <%= f.submit 'Submit' %>
  <% end %>
</div>