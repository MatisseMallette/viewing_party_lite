<%= button_to 'Discover Top Rated Movies', user_movies_path(@user), params: { type: 'top', path: '/3/movie/top_rated' }, method: :get %>

<%= form_with url: user_movies_path(@user), method: :get, local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.hidden_field :type, value: 'search' %>
  <%= f.hidden_field :path, value: '/3/search/movie' %>

  <%= f.submit 'Search By Movie Title' %>
<% end %>
